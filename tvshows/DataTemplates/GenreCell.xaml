<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="tvshows.Views.GenreCell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--
            Don't forget to set paddng to 0
        -->
        <Frame
            Padding="0"
            HasShadow="False"
            IsClippedToBounds="True">
            <Label
                Padding="5"
                BackgroundColor="{StaticResource ThemeColor}"
                FontAttributes="Bold"
                Text="{Binding .}"
                TextColor="White" />
        </Frame>
    </Grid>
</ContentView>