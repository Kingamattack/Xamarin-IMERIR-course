<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="tvshows.Views.DetailsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:Behaviors;assembly=Behaviors"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:tabView="clr-namespace:Xam.Plugin.TabView;assembly=Xam.Plugin.TabView"
    xmlns:viewModels="clr-namespace:tvshows.ViewModels;assembly=tvshows.ViewModels"
    xmlns:views="clr-namespace:tvshows.Views"
    Title="{Binding Show.Name}">

    <ContentPage.BindingContext>
        <viewModels:DetailViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Behaviors>
        <behaviors:EventHandlerBehavior EventName="Appearing">
            <behaviors:InvokeCommandAction Command="{Binding AppearingCommand}" />
        </behaviors:EventHandlerBehavior>
    </ContentPage.Behaviors>

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding OpenWebsiteCommand}"
            IconImageSource="ic_web"
            Order="Primary"
            Priority="0" />
    </ContentPage.ToolbarItems>

    <ScrollView Padding="10" VerticalScrollBarVisibility="Never">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="300" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="500" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <Grid BackgroundColor="Lime" HorizontalOptions="FillAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Image
                    Aspect="AspectFit"
                    BackgroundColor="Blue"
                    Source="{Binding Show.Image.Original}"
                    VerticalOptions="FillAndExpand" />

                <StackLayout
                    Grid.Column="1"
                    BackgroundColor="Yellow"
                    Orientation="Vertical"
                    VerticalOptions="FillAndExpand">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="1ere diffusion" />
                    <Label Text="{Binding Show.Premiered}" TextColor="Gray" />

                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Nombre d'épisode" />
                    <Label Text="{Binding Show.Premiered}" TextColor="Gray" />

                    <Label FontAttributes="Bold" Text="Note" />
                    <!--<Label Text="{Binding Note}" />-->

                    <Label FontAttributes="Bold" Text="Status" />
                    <StackLayout Orientation="Horizontal">
                        <Frame
                            BackgroundColor="{Binding StatusColor}"
                            CornerRadius="5"
                            IsClippedToBounds="True" />
                        <Label Text="{Binding Show.Status}" VerticalOptions="Center" />
                    </StackLayout>
                </StackLayout>
            </Grid>

            <!--  Summary  -->
            <StackLayout Grid.Row="1">
                <Label
                    FontSize="18"
                    Text="Résumé"
                    VerticalOptions="Start" />
                <Label
                    BackgroundColor="Yellow"
                    Text="{Binding Summary}"
                    TextType="Text"
                    VerticalOptions="Start" />
            </StackLayout>

            <!--  TabView  -->
            <tabView:TabViewControl
                Grid.Row="2"
                HeaderSelectionUnderlineColor="{StaticResource ThemeColor}"
                HeaderTabTextColor="{StaticResource ThemeColor}">
                <tabView:TabViewControl.ItemSource>
                    <tabView:TabItem HeaderText="Casting">
                        <views:CastingView BindingContext="{Binding CastingViewModel}" />
                    </tabView:TabItem>
                    <tabView:TabItem HeaderText="Épisodes">
                        <views:EpisodesView BindingContext="{Binding EpisodesViewModel}" />
                    </tabView:TabItem>
                </tabView:TabViewControl.ItemSource>
            </tabView:TabViewControl>

            <!--  Favorites  -->
            <Button
                Grid.Row="3"
                BackgroundColor="{StaticResource ThemeColor}"
                Command="{Binding SaveToCollectionCommand}"
                IsVisible="{Binding IsButtonVisible}"
                Text="Ajouter aux favoris"
                TextColor="White"
                VerticalOptions="End" />
        </Grid>
    </ScrollView>
</ContentPage>